RobotProperties
{
      RobotName:TheDestroyer;
      RobotType: AdvancedRobot;
      BodyColor:yellow;
      GunColor:red;
      RadarColor:white;
}

number x = 3;
strategy Default()
{
    routine(6)
    {
        x = x + 1;
    }
    when (MyLowHealthEvent e)
    {
        x = 5;
    }
    when (HitRobotEvent f)
    {
        if(f.getName() == "SittingDuck")
        {
            print("Got you :)");
        }

        Offensive();
    }
}

number power(number y)
{
    return y*y;
}

strategy Offensive()
{
    text enemy = "SittingDuck";
    routine()
    {
        turnLeft(360);
        print("Shoot: " + enemy);
    }
    when (ScannedRobotEvent e)
    {
        print("I see you: " + e.getName());
        enemy = AdvancedCalculation(e.getName());
    }
}

text AdvancedCalculation(text enemyName)
{
    if(true)
    {
        if(enemyName != "SittingDuck")
        {
            if(x < 3)
            {
                if(enemyName == "WallRider")
                {
                    if(x == 2)
                    {
                        Default();
                        return "Crazy";
                    }
                    return "SittingDuck";
                }
                return "WallRider";
            }
            return "Advanced";
        }

        return "SittingDuck";
    }
    else{
        return "SittingDuck";
    }
}


event MyLowHealthEvent()
{
   text enemy = "WallRider";

   return getEnergy() <= 30;
}